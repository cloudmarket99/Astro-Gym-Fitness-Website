---
import { siteData, navigation, socialLinks, contactInfo } from '../data/siteData';
---

<footer class="bg-slate-900 border-t border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- About Section -->
      <div>
        <div class="mb-6 flex items-center gap-2">
          <div class="w-12 h-12 bg-yellow-500 rounded-lg flex items-center justify-center">
            <i class="ri-flashlight-fill text-slate-900 text-2xl"></i>
          </div>
          <span class="text-2xl font-bold text-yellow-500 font-heading">
            {siteData.name}
          </span>
        </div>
        <p class="text-gray-400 mb-6 leading-relaxed">{siteData.shortDescription}</p>
        <div class="flex space-x-3">
          {socialLinks.map((social) => (
            <a
              href={siteData.social[social.name as keyof typeof siteData.social]}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-slate-800 hover:bg-yellow-500 text-gray-400 hover:text-slate-900 rounded-lg flex items-center justify-center transition-all"
              aria-label={social.label}
            >
              <i class={`${social.icon} text-xl`}></i>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-6">빠른 링크</h4>
        <ul class="space-y-3">
          {navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-400 hover:text-yellow-500 transition-colors flex items-center gap-2"
              >
                <i class="ri-arrow-right-s-line text-yellow-500"></i>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-6">연락처</h4>
        <ul class="space-y-4 text-gray-400">
          <li class="flex items-start gap-3">
            <i class="ri-phone-line text-yellow-500 text-xl mt-0.5 shrink-0"></i>
            <div>
              <div class="text-sm text-gray-500 mb-1">긴급 출장 전화</div>
              <a href={`tel:${siteData.phone}`} class="hover:text-yellow-500 transition-colors font-semibold text-white">
                {siteData.phone}
              </a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <i class="ri-mail-line text-yellow-500 text-xl mt-0.5 shrink-0"></i>
            <div>
              <div class="text-sm text-gray-500 mb-1">이메일</div>
              <a href={`mailto:${siteData.email}`} class="hover:text-yellow-500 transition-colors">
                {siteData.email}
              </a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <i class="ri-time-line text-yellow-500 text-xl mt-0.5 shrink-0"></i>
            <div>
              <div class="text-sm text-gray-500 mb-1">운영시간</div>
              <span>365일 24시간 긴급 출동</span>
            </div>
          </li>
        </ul>
      </div>

      <!-- Location Info -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-6">지점 안내</h4>
        <ul class="space-y-4 text-gray-400">
          <li class="flex items-start gap-3">
            <i class="ri-map-pin-line text-yellow-500 text-xl mt-0.5 shrink-0"></i>
            <div>
              <div class="text-sm text-gray-500 mb-1">본사</div>
              <span class="text-sm leading-relaxed">{siteData.address}</span>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <i class="ri-map-pin-2-line text-yellow-500 text-xl mt-0.5 shrink-0"></i>
            <div>
              <div class="text-sm text-gray-500 mb-1">서울 지점</div>
              <span class="text-sm leading-relaxed">{siteData.seoulAddress}</span>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-slate-800 pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-gray-400 text-sm">
        &copy; {new Date().getFullYear()} {siteData.name}. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm">
        <a href="#" class="text-gray-400 hover:text-yellow-500 transition-colors">개인정보처리방침</a>
        <a href="#" class="text-gray-400 hover:text-yellow-500 transition-colors">이용약관</a>
      </div>
    </div>
  </div>
</footer>

